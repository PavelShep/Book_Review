<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.image, alt: "Image not found", class: "image-show" %>
  </div>
  <div class="col-md-8"></div>
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <p><%= @book.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <!-- Where review will go -->
  </div>
</div>

<%= link_to "Back", root_path %>

<% if user_signed_in? && @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "Delete", book_path(@book), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>