<p><%= review.rating %></p>
<p><%= review.comment %></p>

<% if user_signed_in? && review.user_id == current_user.id %>
  <%= link_to "Edit", edit_book_review_path(review.book, review) %>
  <%= link_to "Delete", book_review_path(review.book, review), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>