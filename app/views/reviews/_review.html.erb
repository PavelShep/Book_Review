<div class="review">
  <% review.rating.to_i.times do  %>
    <span class="glyphicon glyphicon-star"></span>
  <% end %>
  <% review.blank_stars.times do %>
    <span class="glyphicon glyphicon-star-empty"></span>
  <% end %>
  <p class="review-comment"><%= review.comment %></p>

  <% if user_signed_in? && review.user_id == current_user.id %>
    <div class="links btn-group">
      <%= link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-custom" %>
      <%= link_to "Delete", book_review_path(review.book, review), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-custom" %>
    </div>
  <% end %>
</div>
